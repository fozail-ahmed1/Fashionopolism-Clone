{{ 'image-text-container.css' | asset_url | stylesheet_tag }}

<div class="new-section">
  <div class="container">
    <div class="left-section">
      {{ section.settings.left_image | image_url }}
    </div>
    <div class="right-section">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.paragraph }}</p>
      <a href="{{ section.settings.button_link }}" class="button button--primary">{{ section.settings.button_text }}</a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Text Container",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "<p>Your paragraph text.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "category": "Custom",
      "name": "New Section"
    }
  ]
}
{% endschema %}
